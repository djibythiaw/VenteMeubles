{% extends '::base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
    <section id="form"><!--form-->
        <div class="container">
            <div class="row">
                <div class="col-sm-4 col-sm-offset-1">
                    <div class="login-form"><!--login form-->

                        <h2>Connexion Ã  son compte</h2>

                        {% block fos_user_content %}
                            {% trans_default_domain 'FOSUserBundle' %}

                            {% if error %}
                                <div class="alert alert-danger" role="alert">{{ error|trans }}</div>
                            {% endif %}

                            <form action="{{ path("fos_user_security_check") }}" method="post">
                                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

                                <label for="username">{{ 'security.login.username'|trans }}</label>
                                <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" placeholder="Name" />

                                <label for="password">{{ 'security.login.password'|trans }}</label>
                                <input type="password" id="password" name="_password" required="required" placeholder="Password" />

                                <span>
                                <input type="checkbox" class="checkbox" id="remember_me" name="_remember_me" value="on">
                                    {{ 'security.login.remember_me'|trans }}
                                </span>

                                <button type="submit" id="_submit" name="_submit" class="btn btn-default">{{ 'security.login.submit'|trans }}</button>
                            </form>
                        {% endblock fos_user_content %}
                    </div>
                </div>

                <div class="col-sm-6" style="text-align: right">
                    <img src="{{ asset('images/login.png') }}" alt="" />
                </div>
            </div>
        </div>
    </section><!--/form-->
{% endblock %}